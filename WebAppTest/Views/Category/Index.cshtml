@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-4">
    
    <div class="row pt-3">
        <div class="col">
            <h2>Categories List</h2>
        </div>
        <div class="col text-end">
            <a asp-controller="Category" asp-action="Create"  class="btn btn-success"><i class="bi bi-plus-circle"></i> &nbsp; Create</a>
        </div>
    </div>
  

<table class="table talbe-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Categories Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td class="w-50">@obj.Name</td>
                <td >@obj.DisplayOrder</td>
                <td class="w-25">
                    <div class=" btn-group w-25" role="group">
                        <a class="btn btn-warning" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-archive"></i> Delete</a>
                    </div>
                </td>

            </tr>
            
        }
       
    </tbody>
</table>
</div>
