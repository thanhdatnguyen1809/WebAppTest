@model Category


<form method="post">
    
    <div class="p-3 border mt-3 w-75 position-absolute top-50 start-50 translate-middle">
        <div class="row"><h3 class="p-2 text-primary text-center ">Edit Category</h3></div>
        <div class="mt-3"><label asp-for="Name"></label></div>
        <div class="mt-2"><input asp-for="Name" class="w-100 form-control"/></div>
        <span asp-validation-for="Name" class="text-danger fs-6"></span>
        <div class="mt-3"><label asp-for="DisplayOrder"></label></div>
        <div class="mt-2"><input asp-for="DisplayOrder" class="w-100 form-control "/></div>
        <div><span asp-validation-for="DisplayOrder" class="text-danger fs-6"></span></div>
        <button type="submit" class="btn btn-warning mt-4 " style="width:130px">Update</button>
        <a class="btn border mt-4 float-end" asp-controller="Category" asp-action="Index" >Back to List</a>
    </div>
    
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}